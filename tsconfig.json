{
  // Removed schema reference due to accessibility issues
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "outDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./ts/**/*"]
}
